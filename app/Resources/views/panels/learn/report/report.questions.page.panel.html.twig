{% extends 'panels/panel.base.html.twig' %}
{% block panelBaseTitle %}
    <b>{% trans %}Bekijk rapport{% endtrans %}</b>
{% endblock %}
{% block panelBaseContents %}
    <div class="panel-body">
        <div class="well well-sm">
            <div class="centrum">
                <b>{{ page.title }}</b>
                <div class="btn-group-vertical pull-right">
                    <button class="btn btn-default btn-xs unclickable" type="button">
                        <b>{% trans %}Pagina{% endtrans %}:</b>
                        {% if page.pageOrder <= 9 %}0{% endif %}{{ page.pageOrder }} / {% if pages|length <= 9 %}0{% endif %}{{ pages|length }}
                    </button>
                </div>
            </div>
        </div>
        {% for question in questions %}
            {% include ':panels/learn/report/questions:'~question.question.questionType.type~'.item.html.twig' %}
        {% endfor %}
    </div>
{% endblock %}