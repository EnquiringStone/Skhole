{% extends 'panels/panel.base.html.twig' %}
{% block panelBaseTitle %}
    {% trans %}h.find_out_what_you_can_do{% endtrans %}
{% endblock %}
{% block panelBaseContents %}
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="embed-responsive embed-responsive-4by3">
                    {#TODO Localize youtube videos#}
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/gT0AK-czmvE" allowfullscreen></iframe>
                </div>
            </div>
            <div class="col-md-6">
                <h4><b>{% trans %}h.getting.started.create_course{% endtrans %}</b></h4>
                <p>{% trans %}h.getting.started.create_course.text_01{% endtrans %}:</p>
                <ol>
                    <li><b class="text-muted">{% trans %}o.frequently_used.course_card{% endtrans %}: </b>{% trans %}h.getting.started.create_course.li.course_card_overview{% endtrans %};</li>
                    <li><b class="text-muted">{% trans %}o.frequently_used.explantion_pages{% endtrans %}: </b>{% trans %}h.getting.started.create_course.li.video_text{% endtrans %};</li>
                    <li><b class="text-muted">{% trans %}o.frequently_used.assignment_pages{% endtrans %}: </b>{% trans %}h.getting.started.create_course.li.multipe_and_open_questions{% endtrans %};</li>
                    <li><b class="text-muted">{% trans %}o.frequently_used.other_course_pages{% endtrans %}: </b>{% trans %}h.getting.started.create_course.li.example_pages{% endtrans %}.</li>
                </ol>
                <p>{% trans %}h.getting.started.create_course.text_02{% endtrans %}</p>
                <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#teachIntroductionModal">
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                    {% trans %}o.button.create_course{% endtrans %}
                </button>
            </div>
        </div>

    </div>
{% endblock %}


