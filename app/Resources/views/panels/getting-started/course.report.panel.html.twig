{% extends 'panels/panel.base.html.twig' %}
{% block panelBaseTitle %}
    {% trans %}h.getting.started.report.the_report{% endtrans %}
{% endblock %}
{% block panelBaseContents %}
    <div class="panel-body">
        <div class="row">           
            <div class="col-md-6">
                <div class="thumbnail">
                    <div class="btn-pref" role="group">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-sm btn-default" href="#imageTab_I" data-toggle="tab">
                                {% trans %}I{% endtrans %}
                            </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-sm" href="#imageTab_II" data-toggle="tab">
                                {% trans %}II{% endtrans %}
                            </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-sm" href="#imageTab_III" data-toggle="tab">
                                {% trans %}III{% endtrans %}
                            </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-sm" href="#imageTab_IV" data-toggle="tab">
                                {% trans %}IV{% endtrans %}
                            </button>
                        </div>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="imageTab_I">
                            <img src="{{ asset('images/'~app.request.locale~'/example_report_01.png') }}" class="img-thumbnail">
                        </div>
                        <div class="tab-pane fade in" id="imageTab_II">
                            <img src="{{ asset('images/'~app.request.locale~'/example_report_02.png') }}" class="img-thumbnail">
                        </div>
                        <div class="tab-pane fade in" id="imageTab_III">
                            <img src="{{ asset('images/'~app.request.locale~'/example_report_03.png') }}" class="img-thumbnail">
                        </div>
                        <div class="tab-pane fade in" id="imageTab_IV">
                            <img src="{{ asset('images/'~app.request.locale~'/example_report_04.png') }}" class="img-thumbnail">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h4><samp><b>{% trans %}h.getting.started.report.the_report{% endtrans %}</b></samp></h4>
                <p>{% trans %}h.getting.started.report.the_report.text{% endtrans %}</p>
                <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#courseReportIntroductionModal">
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                    {% trans %}o.button.course_report{% endtrans %}
                </button>
                <br />
                <h4><samp><b>{% trans %}h.getting.started.report.share_with{% endtrans %}</b></samp></h4>
                <p>
                {% trans %} h.getting.started.report.share_with.text_01{% endtrans %}.
                </p>
            </div>
        </div>  

    </div>
{% endblock %}