{% extends 'panels/panel.base.html.twig' %}
{% block panelBaseTitle %}
    {% trans %}m.contact.head_title.contact{% endtrans %}
{% endblock %}
{% block panelBaseContents %}
    <div class="panel-body">
        <div class="thumbnail">
            <h4><b>{% trans %}m.contact.t_header.for.information{% endtrans %}</b></h4>
            <p>{% trans %}m.contact.t_long.for.information{% endtrans %}
             </p>
            <p>
                <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#reportInstructionsModal">
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                    {% trans %}o.b.report_content{% endtrans %}
                </button>
            </p>
        </div>
        <div class="thumbnail">
            <h4 class="centrum"><b>{% trans %}m.contact.t_header.contact_form{% endtrans %}</b></h4>
            <form id="contact-form" class="form-horizontal" data-utl="{{ path('app_home_ajax_page') }}">
                <div class="form-group">
                    <label class="col-sm-2 control-label">{% trans %}m.contact.f_label.first_name{% endtrans %}</label>
                    <div class="col-sm-10">
                        <input class="form-control data-value" data-attribute="firstName" placeholder="{% trans %}m.contact.f_placeholder.first_name{% endtrans %}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">{% trans %}m.contact.label.last_name{% endtrans %}</label>
                    <div class="col-sm-10">
                        <input class="form-control data-value" data-attribute="surname" placeholder="{% trans %}m.contact.f_placeholder.last_name{% endtrans %}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">{% trans %}m.contact.label.subject{% endtrans %}</label>
                    <div class="col-sm-10">
                        <select class="form-control data-value" data-attribute="subject">
                            {% for subject in subjects %}
                                <option value="{{ subject.id }}">{{ subject.translationKey|trans({},'db') }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">{% trans %}m.contact.label.email{% endtrans %}</label>
                    <div class="col-sm-10">
                        <input class="form-control data-value" data-attribute="email" placeholder="{% trans %}m.contact.placeholder.email{% endtrans %}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">{% trans %}m.contact.label.email.message{% endtrans %}</label>
                    <div class="col-sm-10">
                        <textarea class="form-control data-value" data-attribute="message" placeholder="{% trans %}m.contact.label.placeholder.message{% endtrans %}" rows="12"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="centrum">
                        <button class="btn btn-default btn-lg" type="submit">
                            <b>{% trans %}m.contact.send{% endtrans %}</b>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}