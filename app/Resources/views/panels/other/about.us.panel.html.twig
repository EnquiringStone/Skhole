{% extends 'panels/panel.base.html.twig' %}
{% block panelBaseTitle %}
    {% trans %}m.about.head_title.about_us{% endtrans %}
{% endblock %}
{% block panelBaseContents %}
    <div class="panel-body">
        <h4><b>{% trans %}m.about.t_header.general{% endtrans %}</b></h4>
        <p>{% trans %}m.about.t_long.general_information{% endtrans %}</p>
        <div class="logo-background">
            <h4>
                <img src="{{ asset('images/logo-skhole.png') }}" class="img-rounded" height="28px" alt="{% trans %}alt.studylivre{% endtrans %}" title="{% trans %}alt.studylivre{% endtrans %}">
                <b>
                    <span class="text-muted">{% trans %}o.logo.t.study{% endtrans %}</span><span class="text-primary">{% trans %}Livre{% endtrans %}</span>
                </b>
                <small>{% trans %}o.logo.t.empowering_education{% endtrans %}</small>
            </h4>
        </div>
        <br>
        <span class="text-muted">{% trans %}m.about.t_header.follow_us{% endtrans %}</span>
        <br />
        <a target="_blank" href="https://www.facebook.com/studylivre/">
            <img class="img-rounded" src="{{ asset('images/login-fb.png') }}">
        </a>
        <div class="fb-like" data-href="https://www.facebook.com/studylivre/" data-layout="button" data-action="like" data-size="small" data-show-faces="false" data-share="true"></div>
        <br />
        <br />
        <a target="_blank" href="https://plus.google.com/b/102712635638531679689/?pageId=102712635638531679689">
            <img class="img-rounded" src="{{ asset('images/social-media-gp.png') }}">
        </a>
        <div class="g-plusone" data-size="medium" data-annotation="none" data-href="https://plus.google.com/b/102712635638531679689/?pageId=102712635638531679689"></div>
        <hr />
        <h4>
            <b>{% trans %}m.about.t_header.adress{% endtrans %}</b>
        </h4>
        <div class="row">
            <div class="col-md-6">
                <iframe width="100%" height="350" frameborder="0" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyC-DpWY549XyaPIetw9Vs2N_NrCjJLj-kE
                &q=Hilversum+Nederland&language={{ app.request.locale }}" marginwidth="0" marginheight="0" scrolling="no"></iframe>
            </div>
            <div class="col-md-6">
                {#TODO company#}
                <h2>{% trans %}m.about.t_header.company_name{% endtrans %}</h2>
                <p>
                    <b>{% trans %}m.about.t.email{% endtrans %}</b>: {% trans %}m.about.t.emailadres{% endtrans %}
                </p>
            </div>
        </div>
    </div>
{% endblock %}