{% block tabHeader %}
    <div class="panel-heading">
        <ul class="nav nav-tabs">
            <li {% if active == 'standard' %}class="active"{% endif %}>
                <a aria-expanded="true" class="check-changes clickable" href="{{ path('app_teach_edit_course_page', {'id': course.id}) }}">{% trans %}Standaard pagina's{% endtrans %}</a>
            </li>
            <li {% if active == 'custom' %}class="active"{% endif %}>
                <a aria-expanded="false" class="check-changes clickable" href="{{ path('app_teach_edit_course_page_page', {'id': course.id, 'pageType': 'custom', 'name': 'start'}) }}">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    {% trans %}Voeg pagina toe{% endtrans %}
                </a>
            </li>
            <li {% if active == 'publish' %}class="active"{% endif %}>
                <a aria-expanded="false" class="check-changes clickable" href="{{ path('app_teach_edit_course_page_page', {'id': course.id, 'pageType': 'publish', 'name': 'start'}) }}">
                    {% trans %}Publiceer{% endtrans %}
                </a>
            </li>
        </ul>
    </div>
{% endblock %}