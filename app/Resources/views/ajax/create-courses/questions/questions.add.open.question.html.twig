{% block questionsAddOpenQuestion %}
    <h5 class="centrum">
        <b>
            <span class="glyphicon glyphicon-pencil"></span>
            {% trans %}t.create_course.add_question{% endtrans %}
        </b>
    </h5>
    <br>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">{% trans %}t.create_course.f_label.open_question{% endtrans %}</label>
            <div class="col-sm-10">
                <textarea class="form-control data-value" data-value-name="question" rows="3" placeholder="{% trans %}t.create_course.f_placeholder.open_question{% endtrans %}"
                >{% if question is defined %}{{ question.question }}{% endif %}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">{% trans %}t.create_course.f_label.answer_indication{% endtrans %}</label>
            <div class="col-sm-10">
                <textarea class="form-control data-value" data-value-name="answerIndication" rows="10" placeholder="{% trans %}t.create_course.f_placeholder.type_anwser_indication{% endtrans %}"
                          >{% if question is defined %}{{ question.answerIndication }}{% endif %}</textarea>
            </div>
        </div>
        <input class="data-value" type="hidden" value="open-question" data-value-name="type">
        <input class="data-value" type="hidden" data-value-name="questionId" value="{% if question is defined %}{{ question.id }}{% else %}-1{% endif %}">
    </form>
    <div class="panel-footer panel-default">
        <div class="pull-right">
            <button class="btn btn-default save-custom-question" type="button">
                <span class="glyphicon glyphicon-ok text-success"></span>
                {% trans %}t.create_course.save{% endtrans %}
            </button>
            <button class="btn btn-default remove-custom-question" type="button" data-question-id="{% if question is defined %}{{ question.id }}{% else %}-1{% endif %}">
                <span class="glyphicon glyphicon-remove text-danger"></span>
                {% trans %}t.create_course.b.delete{% endtrans %}
            </button>
        </div>
        <div class="pull-left">
            <button class="btn btn-default select-questions-overview" type="button">
                <span class="glyphicon glyphicon-arrow-left"></span>
                {% trans %}t.create_course.go_back{% endtrans %}
            </button>
        </div>
        <br>
    </div>
{% endblock %}