{% block startPublishPage %}
    <div class="tab-pane fade in active">
        <div class="min-height-thumbnail">
            <div class="centrum margin-from-top120">
                {% if course.state.stateCode == 'OK' %}
                    <p>{% trans %}t.create_course.t_long.course_already_published{% endtrans %}.</p>
                {% else %}
                    {% if course.canPublish %}
                        <p>
                            {% trans %}t.create_course.t_long.before_you_publish_course{% endtrans %}.
                        </p>
                        <button class="btn btn-default btn-lg publish-course" type="button" data-course-overview-url="{{ path('app_teach_my_courses_page') }}">
                            <span class="glyphicon glyphicon-star text-success" aria-hidden="true"></span>
                            <b>{% trans %}t.create_course.b.publish_course{% endtrans %}</b>
                        </button>
                    {% else %}
                        <p>{% trans %}t.create_course.t_long.not_yet_ready_to_publish{% endtrans %}.</p>
                        <a href="{{ path('app_teach_edit_course_page', {'id': course.id }) }}">{% trans %}t.create_course.a.to_start{% endtrans %}</a>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

