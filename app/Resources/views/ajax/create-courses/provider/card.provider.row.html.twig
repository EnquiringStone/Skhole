{% block cardProviderRow %}
    <ul class="media-list">
        <li class="media" data-provider-id="{{ provider.id }}">
            <div class="media-body">
                <div class="btn-group-vertical pull-right">
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#addProviderModal{{ index }}">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        {% trans %}Bewerk{% endtrans %}
                    </button>
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#removeProviderModal{{ index }}">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        {% trans %}Aanbieder{% endtrans %}
                    </button>
                </div>
                <h4 class="provider-name">{{ provider.name|default('-') }}</h4>
                <p class="provider-description">{{ provider.description|default('-') }}</p>
                <br />
            </div>
        </li>
    </ul>
{% endblock %}