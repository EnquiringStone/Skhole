{% block courseReviewBody %}
    <div class="thumbnail">
        <div class="row">
            <div class="col-md-1">
                <img src="{{ asset('images/gebruiker.png') }}" class="img-rounded" />
            </div>
            <div class="col-md-11">
                {% if review.insertUser is not null %}
                    <h4>{{ review.insertUser.realName }}</h4>
                    <p>{{ review.remarks }}</p>
                    <div class="btn-group-xs">
                        <button type="button" class="btn btn-default unclickable">
                            <b>{% trans %}o.course_rating.t.course_rating{% endtrans %}:</b>
                            {% if review.contentRating is not null %}
                                {% for z in 0..review.contentRating %}
                                    <img src="{{ asset('images/star_rating.png') }}" class="img-rounded" />
                                {% endfor %}
                            {% else %}
                                -
                            {% endif %}
                        </button>
                        <button type="button" class="btn btn-default unclickable">
                            <b>{% trans %}o.course_rating.t.when_posted{% endtrans %}:</b>
                            {{ review.insertDateTime|date('d-m-Y') }}
                        </button>
                    </div>
                {% else %}
                    <h4>{% trans %}o.course_rating.anonymous{% endtrans %}</h4>
                    <div class="btn-group-xs">
                        <button type="button" class="btn btn-default unclickable">
                            <b>{% trans %}l.last_page.grade_course{% endtrans %}:</b>
                            {% if review.contentRating is not null %}
                                {% for z in 1..review.contentRating %}
                                    <img src="{{ asset('images/star_rating.png') }}" class="img-rounded" />
                                {% endfor %}
                            {% else %}
                                -
                            {% endif %}
                        </button>
                        <button type="button" class="btn btn-default unclickable">
                            <b>{% trans %}o.course_rating.t.when_posted{% endtrans %}:</b>
                            {{ review.insertDateTime|date('d-m-Y') }}
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}