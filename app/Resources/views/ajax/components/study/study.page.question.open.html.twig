{% block studyPageQuestionOpen %}
    <div class="thumbnail open-question" data-question-id="{{ question.id }}">
        <h5>
            <b>{% trans %}Vraag{% endtrans %} {{ question.questionOrder }}</b>
            {{ question.question|capitalize }}
        </h5>
        <textarea class="form-control answer" rows="4"
                  placeholder="{% trans %}Type hier je antwoord{% endtrans %}"
                  >{% if question.id in answeredQuestions|keys %}{{ answeredQuestions[question.id].answer }}{% endif %}</textarea>
    </div>
{% endblock %}