{% block sort %}
    {% if not attribute is defined %}{% set attribute = 'firstName' %}{% endif %}
    {% if not value is defined %}{% set value = 'ASC' %}{% endif %}

    <div class="pull-right">
        <label>{% trans %}o.frequently_used.sorting{% endtrans %}:</label>
        <select class="sortable" name="filterOptions" size="1" aria-controls="example1">
           <option {% if attribute == 'firstName' and value == 'ASC' %}selected="selected"{% endif %} data-attribute="firstName" data-sorted="ASC">{% trans %}t.sort_option.first_name_a_z{% endtrans %}</option>
            <option {% if attribute == 'firstName' and value == 'DESC' %}selected="selected"{% endif %} data-attribute="firstName" data-sorted="DESC">{% trans %}t.sort_option.first_name_z_a{% endtrans %}</option>
            <option {% if attribute == 'surname' and value == 'ASC' %}selected="selected"{% endif %} data-attribute="surname" data-sorted="ASC">{% trans %}t.sort_option.last_name_a_z{% endtrans %}</option>
            <option {% if attribute == 'surname' and value == 'DESC' %}selected="selected"{% endif %} data-attribute="surname" data-sorted="DESC">{% trans %}t.sort_option.last_name_z_a{% endtrans %}</option>
          </select>
    </div>
{% endblock %}