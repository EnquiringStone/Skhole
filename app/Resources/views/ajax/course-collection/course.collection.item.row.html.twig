{% block courseCollectionItemRow %}
    <div class="panel panel-default" data-id="{{ course.id }}">
        <div class="centrum">
            <ol class="breadcrumb">
                <li>
                    <a class="unclickable">{{ course.name }}</a>
                </li>
            </ol>
        </div>
        <div class="media-list">
            <div class="media">
                <span class="pull-left">
                    <img src="{{ asset('images/logo-skhole.png') }}" class="media-object">
                </span>
                <div class="pull-right">
                    <div class="btn-group-vertical">
                        <a href="{{ path('app_learn_study_course_page', {'courseId': course.id}) }}" class="btn btn-primary btn-sm">
                            {% trans %}Naar cursus{% endtrans %}
                        </a>
                        <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#courseCardDetailsModal{{ index }}">
                            {% trans %}Cursuskaart{% endtrans %}
                        </button>
                        <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#removeCollectionItem{{ index }}">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            {% trans %}Cursus{% endtrans %}
                        </button>
                    </div>
                </div>
                <div class="media-body">
                    {% if course.description is not null %}
                        {{ course.description|length > 250 ? course.description|slice(0, 250) ~ '...' : course.description}}
                    {% endif %}
                    <br />
                    {% include ':ajax/components/course-card:course.card.detail.buttons.public.html.twig' %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}