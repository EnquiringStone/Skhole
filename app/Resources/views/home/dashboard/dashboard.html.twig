{% extends 'base.html.twig' %}
{% block title %}{% trans %}h.title.dashboard{% endtrans %}{% endblock %}
{% block body %}
    {% include ':elements:dashboard.navigation.menu.html.twig' %}
    {% include ':panels/dashboard:start.welcome.panel.html.twig' %}
    {% include ':panels/dashboard:courses.supply.panel.html.twig' %}
    {% include ':panels/general:commercial.panel.html.twig' %}
{% endblock %}

{% block modals %}
    {% include ':modal/dashboard:study.introduction.modal.html.twig' with {'modalId' : 'studyIntroductionModal'} %}
    {% include ':modal/dashboard:teach.introduction.modal.html.twig' with {'modalId' : 'teachIntroductionModal'} %}
    {% include ':modal/dashboard:course.report.introduction.modal.html.twig' with {'modalId': 'courseReportIntroductionModal'} %}
{% endblock %}

{% block prescripts %}
    <script src="{{ asset('js/dashboard/dashboard.js') }}"></script>
{% endblock %}

{% block postscripts %}
    {% if login %}
        <script>
            $('#loginModal').modal('show');
        </script>
    {% endif %}
{% endblock %}

{% set menu = 'home' %}
{% set subMenu = 'dashboard' %}