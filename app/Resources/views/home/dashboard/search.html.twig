{% extends 'base.html.twig' %}
{% block title %}{% trans %}o.frequently_used.search{% endtrans %}{% endblock %}
{% block body %}
    {% include ':panels/dashboard:search.panel.html.twig' %}
    {% include ':panels/dashboard:search.results.panel.html.twig' %}
    {% include ':panels/general:commercial.panel.html.twig' %}
{% endblock %}

{% block prescripts %}
    <script src="{{ asset('js/dashboard/search.js') }}"></script>
{% endblock %}

{% block postscripts %}
    {% if login %}
        <script>
            $('#loginModal').modal('show');
        </script>
    {% elseif search is not null and search != '' %}
        <script>
            $('.simple-search-value').val('{{ search }}');
            doSimpleSearch();
        </script>
    {% endif %}
{% endblock %}

{% set menu = 'home' %}
{% set subMenu = 'dashboard' %}