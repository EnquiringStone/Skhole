{% extends 'base.html.twig' %}
{% block title %}{% trans %}o.nav.getting_started{% endtrans %}{% endblock %}
{% block keywords %}{% trans %}meta.description_keywords.home_discover{% endtrans %}{% endblock %}
{% block description %}{% trans %}meta.description_content.home_discover{% endtrans %}{% endblock %}
{% block body %}
    {% if subMenu == 'introduction' %}
        {% include ':panels/getting-started:introduction.panel.html.twig' %}
        {% include ':panels/getting-started:introduction.discover.panel.html.twig' %}
    {% elseif subMenu == 'createCourse' %}
        {% include ':panels/getting-started:course.create.panel.html.twig' %}
    {% elseif subMenu == 'followCourse' %}
        {% include ':panels/getting-started:course.follow.panel.html.twig' %}
    {% elseif subMenu == 'courseReport' %}
        {% include ':panels/getting-started:course.report.panel.html.twig' %}
    {% endif %}
    {% include ':panels/getting-started:extensive.information.panel.html.twig' %}
    {% include ':panels/general:commercial.panel.html.twig' %}
{% endblock %}

{% block modals %}
    {% include ':modal/dashboard:study.introduction.modal.html.twig' with {'modalId' : 'studyIntroductionModal'} %}
    {% include ':modal/dashboard:teach.introduction.modal.html.twig' with {'modalId' : 'teachIntroductionModal'} %}
    {% include ':modal/dashboard:course.report.introduction.modal.html.twig' with {'modalId': 'courseReportIntroductionModal'} %}
    {% include ':modal/create-course:course.resources.instruction.modal.html.twig' with {'modalId': 'resourceInstructionModal'} %}
{% endblock %}

{% block prescripts %}
    <script src="{{ asset('js/dashboard/getting-started.js') }}"></script>
{% endblock %}

{% set menu = 'home' %}