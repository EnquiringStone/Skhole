{% extends 'modal/modal.base.html.twig' %}
{% block modalBaseHeader %}
    <h4 class="modal-title centrum" id="{{ modalId }}">
        <b>
            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
            {% trans %}mo.message{% endtrans %}
            {{ message.senderName }}
        </b>
        <br />
        <span class="text-muted messages-sender-name modal-variable"></span>
    </h4>
{% endblock %}
{% block modalBaseContents %}
    <div class="modal-body">
        <span class="pull-left text-muted small"><em><b>{% trans %}mo.announcement.send_on{% endtrans %}: {{ message.sendDateTime|date('d-m-Y') }}</b> <i class="messages-send-date-time modal-variable"></i></em> </span>
        <hr/>
        <h4 class="messages-title modal-variable">{{ message.title }}</h4>
        <p class="messages-contents modal-variable">{{ message.contents }}</p>
    </div>
{% endblock %}
{% block modalBaseFooter %}
    <div class="modal-footer">
        <button class="btn btn-default btn-sm messages-id remove-message" data-message-id="{{ message.id }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> {% trans %}mo.remove{% endtrans %}</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}o.frequently_used.close{% endtrans %}</button>
    </div>
{% endblock %}