{% extends 'modal/modal.base.html.twig' %}
{% block modalBaseHeader %}
    <h4 class="modal-title centrum" id="{{ modalId }}">
        <b>
            <span class="glyphicon glyphicon-info-sign text-primary" aria-hidden="true"></span>
            {% trans %}o.course_report.t.course_report{% endtrans %}
        </b>
    </h4>
{% endblock %}
{% block modalBaseContents %}
    <div class="modal-body">
        <div class="btn-pref" role="group">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm btn-primary" href="#tabIntroduction{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}o.frequently_used.introduction{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabInfo{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.info{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep1{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.step_01{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep2{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.step_02{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep3{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.step_03{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep4{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.step_04{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep5{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.step_05{% endtrans %}</b>
                </button>
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane fade active in" id="tabIntroduction{{ modalId }}">
                <div class="explanation-background">
                    <br />
                    <br />
                    <div class="centrum">
                        <img src="{{ asset('images/logo-schoolbook.png') }}" class="img-rounded">
                        <h1 class="text-primary">
                            <b>{% trans %}o.course_report.t.course_report{% endtrans %}</b>
                        </h1>
                        <p class="lead text-muted">
                            <b>{% trans %}imo.course_report.student{% endtrans %}:</b>
                            {% trans %}imo.course_report.student.sub_title{% endtrans %}
                            <br />
                            <b>{% trans %}imo.course_report.mentor{% endtrans %}:</b>
                            {% trans %}imo.course_report.teacher.sub_title{% endtrans %}
                        </p>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="tabInfo{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        {% trans %}imo.course_report.intro{% endtrans %}
                    </h4>
                    <p>{% trans %}imo.course_report.t_long.intro_part_01{% endtrans %}.</p>
                    <hr />
                    <h4 class="text-primary">
                        {% trans %}imo.course_report.share_with_mentor{% endtrans %}
                    </h4>
                    <p>{% trans %}imo.course_report.share_with_mentor.t_long_01{% endtrans %}.</p>
                    <hr />
                    <h4 class="text-primary">
                        {% trans %}imo.course_report.structure{% endtrans %}
                    </h4>
                    <p>{% trans %}imo.course_report.structure.t_long_01{% endtrans %}.</p>
                    <div class="thumbnail">     
                        <div class="btn-pref" role="group">
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary btn-sm btn-default" href="#imageTab_I" data-toggle="tab">
                                    {% trans %}I{% endtrans %}
                                </button>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm" href="#imageTab_II" data-toggle="tab">
                                    {% trans %}II{% endtrans %}
                                </button>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm" href="#imageTab_III" data-toggle="tab">
                                    {% trans %}III{% endtrans %}
                                </button>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm" href="#imageTab_IV" data-toggle="tab">
                                    {% trans %}IV{% endtrans %}
                                </button>
                            </div>
                        </div>     
                        <div class="tab-content">
                            <div class="tab-pane fade active in" id="imageTab_I">
                                <img src="{{ asset('images/nl/nl_example_report_01.png') }}" class="img-thumbnail">
                            </div>
                            <div class="tab-pane fade in" id="imageTab_II">
                                <img src="{{ asset('images/nl/nl_example_report_02.png') }}" class="img-thumbnail">
                            </div>
                            <div class="tab-pane fade in" id="imageTab_III">
                                <img src="{{ asset('images/nl/nl_example_report_03.png') }}" class="img-thumbnail">
                            </div>
                            <div class="tab-pane fade in" id="imageTab_IV">
                                <img src="{{ asset('images/nl/nl_example_report_04.png') }}" class="img-thumbnail">
                            </div>
                        </div>  
                    </div>  
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep1{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}imo.frequently_used.step_01{% endtrans %}</b>
                        {% trans %}imo.course_report.step_01.search_course{% endtrans %}
                    </h4>
                     <p>{% trans %}imo.course_report.step_01.search_course.t_long_01{% endtrans %}.</p>
                     <img src="{{ asset('images/nl/nl_example_search_result.png') }}" class="img-thumbnail"><!-- verwerkt = N -->
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep2{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}imo.frequently_used.step_02{% endtrans %}</b>
                        {% trans %}imo.course_report.step_02.mentor_provides_mentor_code{% endtrans %}
                    </h4>
                    <p>{% trans %}imo.course_report.step_02.mentor_provides_mentor_code.t_long_01{% endtrans %}:</p>
                    <ol>
                        <li>
                            {% trans %}
                                imo.course_report.step_02.li.location_i  
                            {% endtrans %}
                        </li>
                        <li>
                            {% trans %}
                                imo.course_report.step_02.li.location_ii
                            {% endtrans %}
                        </li>
                    </ol>    
                    <img src="{{ asset('images/nl/nl_location_mentor_code.png') }}" class="img-thumbnail">
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep3{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}imo.frequently_used.step_03{% endtrans %}</b>
                        {% trans %}imo.course_report.step_03.students_enter_mentor_code{% endtrans %}
                    </h4>
                    <p>{% trans %}imo.course_report.step_03.students_enter_mentor_code.t_long_01{% endtrans %}</p>     
                    <img src="{{ asset('images/nl/nl_example_course_report_in_basket.png') }}" class="img-thumbnail">
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep4{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}imo.frequently_used.step_04{% endtrans %}</b>
                        {% trans %}imo.course_report.step_04.student_accepts{% endtrans %}
                    </h4>
                    <p>{% trans %}imo.course_report.step_04.mentor_accepts{% endtrans %}.</p>
                    <p>{% trans %}imo.course_report.step_04.mentor_declines{% endtrans %}.</p>
                    <img src="{{ asset('images/nl/nl_mentor_accepts_request.png') }}" class="img-thumbnail">
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep5{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}imo.frequently_used.step_05{% endtrans %}</b>
                        {% trans %}imo.course_report.step_05.view_report{% endtrans %}
                    </h4>
                    <p>{% trans %}imo.course_report.step_05.view_report.when_mentor_accepted{% endtrans %}.</p>
                    <p>{% trans %}
                        imo.course_report.step_05.t_long_01
                     {% endtrans %}.</p>   
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block closeButtonText %}
    {% trans %}o.frequently_used.close{% endtrans %}
{% endblock %}
{% set modalBaseType = 'close' %}