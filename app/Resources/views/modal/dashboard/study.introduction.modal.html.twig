{% extends 'modal/modal.base.html.twig' %}
{% block modalBaseHeader %}
    <h4 class="modal-title centrum" id="{{ modalId }}">
        <b>
            <span class="glyphicon glyphicon-info-sign text-primary" aria-hidden="true"></span>
             {% trans %}imo.follow_course.follow_course{% endtrans %}
        </b>
    </h4>
{% endblock %}
{% block modalBaseContents %}
     <div class="modal-body">
        <div class="btn-pref" role="group">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm btn-primary" href="#tabIntroduction{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.introduction{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep1{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.step_01{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep2{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.step_02{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep3{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.step_03{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep4{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.step_04{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep5{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}imo.frequently_used.step_05{% endtrans %}</b>
                </button>
            </div>
        </div>
        <div class="tab-content active">
            <div class="tab-pane fade active in" id="tabIntroduction{{ modalId }}">
                <div class="explanation-background">
                    <br/>
                    <br/>
                    <div class="centrum">
                        <img src="{{ asset('images/logo-schoolbook.png') }}" class="img-rounded">
                        <h1 class="text-primary">
                            <b>{% trans %}imo.follow_course.follow_course{% endtrans %}</b>
                        </h1>
                        <p class="lead text-muted">{% trans %}imo.follow_course.sub_title{% endtrans %}</p>
                        <br />
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep1{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}imo.frequently_used.step_01{% endtrans %}:</b>
                        {% trans %}imo.follow_course.step_01.search_course{% endtrans %}
                    </h4>
                    <p>{% trans %}imo.follow_course.step_01.t.search_course_01{% endtrans %}:</p>
                    <ol>
                        <li>
                            <b>{% trans %}o.frequently_used.to_course{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_01.li.to_course{% endtrans %}.
                        </li>
                        <li>
                            <b>{% trans %}o.frequently_used.course_card{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_01.li.short_overview{% endtrans %}.
                        </li>
                        <li>
                            <b>{% trans %}o.frequently_used.reviews{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_01.li.collection{% endtrans %}.
                        </li>
                        <li>
                            <b>{% trans %}imo.follow_course.step_01.li.plus_baket{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_01.li.add_to_basket{% endtrans %}.
                        </li>
                    </ol>
                    <hr />
                    <h5 class="text-primary"><samp><b>{% trans %}o.frequently_used.course_card{% endtrans %}</b></samp></h5>
                    <p>{% trans %}imo.follow_course.step_01.t_long.course_card{% endtrans %}:
                    </p>
                    <ol>
                        <li>
                            <b>{% trans %}o.frequently_used.introduction{% endtrans %}</b>:
                            {% trans %}imo.follow_course.step_01.course_card.li.li_01{% endtrans %};
                        </li>
                        <li>
                            <b>{% trans %}o.course_card.details{% endtrans %}</b>:
                            {% trans %}imo.follow_course.step_01.course_card.li.li_02{% endtrans %};
                        </li>
                        <li>
                            <b>{% trans %}o.frequently_used.course_card.prereq{% endtrans %}:</b>
                            {% trans %}
                                imo.follow_course.step_01.course_card.li.li_03
                            {% endtrans %};
                        </li>
                        <li>
                            <b>{% trans %}o.frequently_used.provider{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_01.course_card.li.li_04{% endtrans %};
                        </li>
                        <li>
                            <b>{% trans %}o.course_card.instructors{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_01.course_card.li.li_05{% endtrans %}.
                        </li>
                    </ol>
                    <img src="{{ asset('images/'~app.request.locale~'/example_course_card_and_search.png') }}" class="img-thumbnail">
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep2{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}imo.frequently_used.step_02{% endtrans %}:</b>
                        {% trans %}imo.follow_course.step_02.first_course_part{% endtrans %}
                    </h4>
                    <p>{% trans %}imo.follow_course.step_02.first_course_part.t_long{% endtrans %}. </p>
                    <img src="{{ asset('images/'~app.request.locale~'/example_start_page.png') }}" class="img-thumbnail">
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep3{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}imo.frequently_used.step_03{% endtrans %}:</b>
                        {% trans %}imo.follow_course.step_03.middle_part{% endtrans %}
                    </h4>
                    <p>
                        {% trans %}imo.follow_course.step_03.middle_part.t_long{% endtrans %}.
                    </p>
                    <img src="{{ asset('images/'~app.request.locale~'/example_video_and_text.png') }}" class="img-thumbnail">
                    <img src="{{ asset('images/'~app.request.locale~'/example_text.png') }}" class="img-thumbnail">    
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep4{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}imo.frequently_used.step_04{% endtrans %}:</b>
                        {% trans %}imo.follow_course.step_04.unique_course_pages{% endtrans %}
                    </h4>

                    <p class="text-primary">
                        1. {% trans %}imo.follow_course.step_04.course_menu_dropdown{% endtrans %}.
                    </p>
                    <p>
                        {% trans %}imo.follow_course.step_04.course_menu_dropdown.t_long{% endtrans %}:
                    </p>
                    <ol>
                        <li>
                            <b>{% trans %}o.frequently_used.course_card{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_01.li.short_overview{% endtrans %}.
                        </li>
                        <li>
                            <b>{% trans %}o.frequently_used.course_reviews{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_01.li.collection{% endtrans %}.
                        </li>
                        <li>
                            <b>{% trans %}o.frequently_used.annoucements{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_04.messages_course_creators{% endtrans %}.
                        </li>
                        <li>
                            <b>{% trans %}o.frequently_used.planning{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_04.li.week_planning{% endtrans %}.
                        </li>
                        <li>
                            <b>{% trans %}o.documents{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_04.li.link_cloud_provider{% endtrans %}.
                        </li>
                        <li>
                            <b>{% trans %}imo.follow_course.step_04.li.course_pages{% endtrans %}:</b>
                            {% trans %}imo.follow_course.step_04.li.course_page_description{% endtrans %}.
                        </li>
                    </ol>
                    <p>
                        {% trans %}imo.follow_course.step_04.t_long_02{% endtrans %}.
                    </p>

                    <p class="text-primary">
                        2. {% trans %}o.close_course{% endtrans %}.
                    </p>
                    <p>
                        {% trans %}imo.follow_course.step_04.close_course.t_long{% endtrans %}.
                    </p>
                    <img src="{{ asset('images/'~app.request.locale~'/example_course_menu.png') }}" class="img-thumbnail">    
                    <hr />
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep5{{ modalId }}">
                <h4 class="text-primary">
                    <b>{% trans %}imo.frequently_used.step_05{% endtrans %}:</b>
                    {% trans %}imo.follow_course.step_05.closing_part{% endtrans %}
                </h4>
                <p>{% trans %}imo.follow_course.step_05.closing_part.t_long{% endtrans %}.</p>
                <img src="{{ asset('images/'~app.request.locale~'/example_start_page.png') }}" class="img-thumbnail">

            </div>
        </div>
    </div>
{% endblock %}
{% block closeButtonText %}
    {% trans %}o.frequently_used.close{% endtrans %}
{% endblock %}
{% set modalBaseType = 'close' %}