{% extends 'modal/modal.base.html.twig' %}
{% block modalBaseHeader %}
    <h4 class="modal-title centrum" id="{{ modalId }}">
        <b>
            <span class="glyphicon glyphicon-info-sign text-primary" aria-hidden="true"></span>
            {% trans %}Cursus volgen{% endtrans %}
        </b>
    </h4>
{% endblock %}
{% block modalBaseContents %}
    <div class="modal-body">
        <div class="btn-pref" role="group">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm btn-primary" href="#tabIntroduction{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}Introductie{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep1{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}Stap 1{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep2{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}Stap 2{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep3{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}Stap 3{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep4{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}Stap 4{% endtrans %}</b>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm" href="#tabStep5{{ modalId }}" data-toggle="tab">
                    <b>{% trans %}Stap 5{% endtrans %}</b>
                </button>
            </div>
        </div>
        <div class="tab-content active">
            <div class="tab-pane fade active in" id="tabIntroduction{{ modalId }}">
                <div class="explanation-background">
                    <br />
                    <br />
                    <div class="centrum">
                        <img src="{{ asset('images/logo-schoolbook.png') }}" class="img-rounded">
                        <h1 class="text-primary">
                            <b>{% trans %}Cursus volgen{% endtrans %}</b>
                        </h1>
                        <p class="lead text-muted">{% trans %}Volg met gemak een cursus{% endtrans %}</p>
                        <br />
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep1{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}Stap 1{% endtrans %}:</b>
                        {% trans %}Zoek een cursus{% endtrans %}
                    </h4>
                    <p>{% trans %}Ga naar het home tabblad en selecteer zoeken. Aan de rechterkant van ieder zoekresultaat staan vijf opties:{% endtrans %}</p>
                    <ol>
                        <li>
                            <b>{% trans %}Naar cursus{% endtrans %}:</b>
                            {% trans %}Bezoek direct de cursus;{% endtrans %}
                        </li>
                        <li>
                            <b>{% trans %}Cursuskaart{% endtrans %}:</b>
                            {% trans %}Dit is een overzicht met daarin de hoofdlijnen van de cursus;{% endtrans %}
                        </li>
                        <li>
                            <b>{% trans %}Reviews{% endtrans %}:</b>
                            {% trans %}Bekijk hoe andere gebruikers de cursus hebben beoordeeld;{% endtrans %}
                        </li>
                        <li>
                            <b>{% trans %}Leergroep aanmaken{% endtrans %}:</b>
                            {% trans %}Dit is optie waarbij een begeleider/docent inzicht krijgt in de voortgang van een aantal cursisten, waaronder het resultaat van de meerkeuzevragen. Meer weten? Bezoek de leergroep & begeleiderscode instructies uitleg;{% endtrans %}
                        </li>
                        <li>
                            <b>
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                {% trans %}Cursusmandje toevoegen{% endtrans %}:
                            </b>
                            {% trans %}Mogelijkheid om de cursus toe te voegen aan je eigen cursusverzameling;{% endtrans %}
                        </li>
                    </ol>
                    <div class="centrum">
                        <img src="{{ asset('images/nl-search-result.png') }}" class="img-rounded">
                    </div>
                    <hr />
                    <h5 class="text-primary">{% trans %}De cursuskaart{% endtrans %}</h5>
                    <p>{% trans %}Deze kaart is opgebouwd uit de volgende onderdelen{% endtrans %}:</p>
                    <ol>
                        <li>
                            <b>{% trans %}Cursus samenvatting{% endtrans %}</b>
                            {% trans %}Een beknopt overzicht met daarin de belangrijkste cursuskenmerken, zoals de docent, het niveau, cursusduur etc;{% endtrans %}
                        </li>
                        <li>
                            <b>{% trans %}Cursusafbeelding{% endtrans %}</b>
                        </li>
                        <li>
                            <b>{% trans %}Introductie{% endtrans %}</b>
                            {% trans %}In deze sectie wordt uiteengezet welke onderwerpen de cursus behandeld d.m.v. introductievideo- en /of tekst;{% endtrans %}
                        </li>
                        <li>
                            <b>{% trans %}Vereiste voorkennis{% endtrans %}</b>
                        </li>
                        <li>
                            <b>{% trans %}Docenten{% endtrans %}</b>
                            {% trans %}Docenten{% endtrans %}
                        </li>
                    </ol>
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep2{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}Stap 2{% endtrans %}:</b>
                        {% trans %}Het inleidende cursusdeel{% endtrans %}
                    </h4>
                    <p>
                        {% trans %}De eerste twee pagina's van iedere cursus zijn altijd hetzelfde: de eerste is een startpagina met daarin de cursusnaam en een verwijzing naar de cursus kaart. De tweede pagina beidt de mogelijkheid om een cursuscode in te vullen zodat u kunt deelnemen aan een leergroep waarbij de desbetreffende code behoort. Dit is geheel vrijblijvend{% endtrans %}
                    </p>
                    <div class="centrum">
                        <img src="{{ asset('images/nl-course-code-fill-in.png') }}" class="img-rounded">
                    </div>
                    <h5 class="text-primary">{% trans %}Begeleiderscode en leergroep{% endtrans %}</h5>
                    <p>{% trans %}Een leergroep is een optie waarbij een begeleider/docent inzicht krijgt in de voortgang van een aantal cursisten, waaronder het resultaat van de meerkeuzevragen. Meer weten? Bezoek de leergroep & cursuscode instructies uitleg;{% endtrans %}</p>
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep3{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}Stap 3{% endtrans %}:</b>
                        {% trans %}Het middendeel{% endtrans %}
                    </h4>
                    <p>
                        {% trans %}Vervolgens volgen een x-aantal pagina's die uniek gemaakt zijn door de desbetreffende cursus maker. cursus opgebouwd uit een mix van verschillende soortenpagina's:{% endtrans %}
                    </p>
                    <ol>
                        <li>
                            <b>{% trans %}Instructie{% endtrans %}:</b>
                            {% trans %}In de vorm van tekst en/of video;{% endtrans %}
                        </li>
                        <li>
                            <b>{% trans %}Opdrachten{% endtrans %}:</b>
                            {% trans %}Onderverdeeld in meerkeuze- of openvragen;{% endtrans %}
                        </li>
                    </ol>
                    <div class="centrum">
                        <img src="{{ asset('images/nl-question-example.png') }}" class="img-rounded">
                    </div>
                    <hr />
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep4{{ modalId }}">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        <b>{% trans %}Stap 4{% endtrans %}:</b>
                        {% trans %}Het ondersteunende deel{% endtrans %}
                    </h4>
                    <p>
                        {% trans %}Iedere cursus heeft een aantal ondersteunende pagina's. Hieronder de opties:{% endtrans %}
                    </p>
                    <ol>
                        <li>
                            <b>{% trans %}Cursuskaart{% endtrans %}</b>
                        </li>
                        <li>
                            <b>{% trans %}Cursusreview{% endtrans %}</b>
                        </li>
                        <li>
                            <b>{% trans %}Mededelingen{% endtrans %}</b>
                        </li>
                        <li>
                            <b>{% trans %}Planning{% endtrans %}</b>
                        </li>
                        <li>
                            <b>{% trans %}Cursusmateriaal{% endtrans %}</b>
                        </li>
                    </ol>
                    <div class="centrum">
                        <img src="{{ asset('images/nl-example-course-menu.png') }}" class="img-rounded">
                    </div>
                    <hr />
                </div>
            </div>
            <div class="tab-pane fade" id="tabStep5{{ modalId }}">
                <h4 class="text-primary">
                    <b>{% trans %}Stap 5{% endtrans %}:</b>
                    {% trans %}Het afsluitende deel{% endtrans %}
                </h4>
                <p>{% trans %}Iedere cursus eindigt met een pagina waarin u ervoor kan kiezen om de cursus te beoordelen, zowel in de vorm van een review als een rating geven. De cursus wordt afgesloten met de laatste pagina waarij u de optie heeft om de cursus af te sluiten{% endtrans %}</p>
                <div class="centrum">
                    <img src="{{ asset('images/nl-end-course-example.png') }}" class="img-rounded">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block closeButtonText %}
    {% trans %}Sluiten{% endtrans %}
{% endblock %}
{% set modalBaseType = 'close' %}