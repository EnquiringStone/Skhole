{% extends 'modal/modal.base.html.twig' %}
{% block modalBaseHeader %}
    <h4 class="modal-title centrum" id="{{ modalId }}">
        <b>
            <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>
            {% trans %}mo.language.select_language{% endtrans %}
        </b>
    </h4>
{% endblock %}
{% block modalBaseContents %}
    <div class="modal-body">
        <div class="centrum">
            <a href="{{ path('app_home_dashboard_page', {'_locale': 'en'}) }}">
                <img src="{{ asset('images/language-english.JPG') }}" class="img-rounded">
                {% trans %}mo.language.option.english{% endtrans %}
            </a>
            <br />
            <br />
            <a href="{{ path('app_home_dashboard_page', {'_locale': 'nl'}) }}">
                <img src="{{ asset('images/language-dutch.JPG') }}" class="img-rounded">
                {% trans %}mo.language.option.dutch{% endtrans %}
            </a>
        </div>
    </div>
{% endblock %}

{% block closeButtonText %}
    {% trans %}Sluiten{% endtrans %}
{% endblock %}
{% set modalBaseType = 'close' %}