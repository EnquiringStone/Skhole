{% extends 'modal/modal.base.html.twig' %}
{% block modalBaseHeader %}
    <h4 class="modal-title centrum" id="{{ modalId }}">
        <b>
            <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
            {% trans %}imo.add_documents{% endtrans %}
        </b>
    </h4>
{% endblock %}
{% block modalBaseContents %}
     <div class="modal-body">
        <div class="btn-pref" role="group">
            <div class="btn-group">
                <button type="button" class="btn btn-primary btn-sm btn-default" href="#tabIntro" data-toggle="tab">
                    {% trans %}imo.frequently_used.introduction{% endtrans %}
                </button>
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm" href="#tabInfo" data-toggle="tab">
                    {% trans %}imo.add_documents.info{% endtrans %}
                </button>
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm" href="#tabGoogleDrive" data-toggle="tab">
                    {% trans %}imo.add_documents.google{% endtrans %}
                </button>
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm" href="#tabDropbox" data-toggle="tab">
                    {% trans %}imo.add_documents.dropbox{% endtrans %}
                </button>
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane fade active in" id="tabIntro">
                <div class="explanation-background">
                    <br />
                    <div class="centrum">
                        <h1 class="text-primary">
                            {% trans %}imo.add_documents{% endtrans %}
                        </h1>
                        <br />
                        <p class="lead text-muted">
                            {% trans %}imo.add_documents.sub_title{% endtrans %}
                        </p>
                    </div>
                    <br/>
                </div>
            </div>
            <div class="tab-pane fade" id="tabInfo">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        {% trans %}imo.frequently_used.ter_info{% endtrans %}
                    </h4>
                    <p>{% trans %}imo.frequently_used.ter_info.t_01{% endtrans %}.</p>
                    <p>{% trans %}imo.frequently_used.ter_info.t_02{% endtrans %}.</p>
                </div>
            </div>
            <div class="tab-pane fade" id="tabGoogleDrive">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        {% trans %}imo.add_documents.option_google{% endtrans %}
                    </h4>
                    <ol type="I">
                        <li>{% trans %}imo.add_documents.google.li.step_01{% endtrans %}.</li>
                        <li>{% trans %}imo.add_documents.google.li.step_02{% endtrans %}.</li>
                        <li>{% trans %}imo.add_documents.google.li.step_03{% endtrans %}.</li>
                        <li>{% trans %}imo.add_documents.google.li.step_04{% endtrans %}.</li>
                    </ol>      
					<!-- -->
					<div class="thumbnail">     
						<div class="btn-pref" role="group">
							<div class="btn-group">
								<button type="button" class="btn btn-primary btn-sm btn-default" href="#googleimageTab_I" data-toggle="tab">
									{% trans %}mo.login.info_account.step_i_and_ii{% endtrans %}
								</button>
							</div>
							<div class="btn-group">
								<button type="button" class="btn btn-default btn-sm" href="#googleimageTab_II" data-toggle="tab">
									{% trans %}mo.login.info_account.step_iii{% endtrans %}
								</button>
							</div>
							<div class="btn-group">
								<button type="button" class="btn btn-default btn-sm" href="#googleimageTab_IV" data-toggle="tab">
									{% trans %}mo.login.info_account.step_iv{% endtrans %}
								</button>
							</div>
						</div>     
						<div class="tab-content">
							<div class="tab-pane fade active in" id="googleimageTab_I">
								<img src="{{ asset('images/'~app.request.locale~'/google_drive_step_01_and_02.png') }}" class="img-thumbnail">
							</div>
							<div class="tab-pane fade in" id="googleimageTab_II">
								<img src="{{ asset('images/'~app.request.locale~'/google_drive_step_03.png') }}" class="img-thumbnail">
							</div>
							<div class="tab-pane fade in" id="googleimageTab_IV">
								<img src="{{ asset('images/'~app.request.locale~'/google_drive_step_04.png') }}" class="img-thumbnail">
							</div>
						</div>  
					</div>  
					<!-- -->     
                </div>
            </div>
            <div class="tab-pane fade" id="tabDropbox">
                <div class="explanation-background">
                    <h4 class="text-primary">
                        {% trans %}imo.add_documents.option_dropbox{% endtrans %}
                    </h4>
                        <ol type="I">
                            <li>{% trans %}imo.add_documents.dropbox_01{% endtrans %}.</li>
                            <li>{% trans %}imo.add_documents.dropbox_02{% endtrans %}.</li>
                            <li>{% trans %}imo.add_documents.dropbox_03{% endtrans %}.</li>
                            <li>{% trans %}imo.add_documents.dropbox_04{% endtrans %}.</li>
                        </ol>  
					<!-- -->
					<div class="thumbnail">     
						<div class="btn-pref" role="group">
							<div class="btn-group">
								<button type="button" class="btn btn-primary btn-sm btn-default" href="#dropboximageTab_I" data-toggle="tab">
									{% trans %}mo.login.info_account.step_i{% endtrans %}
								</button>
							</div>
							<div class="btn-group">
								<button type="button" class="btn btn-default btn-sm" href="#dropboximageTab_II" data-toggle="tab">
									{% trans %}mo.login.info_account.step_ii{% endtrans %}
								</button>
							</div>
							<div class="btn-group">
								<button type="button" class="btn btn-default btn-sm" href="#dropboximageTab_III" data-toggle="tab">
									{% trans %}mo.login.info_account.step_iii{% endtrans %}
								</button>
							</div>
							<div class="btn-group">
								<button type="button" class="btn btn-default btn-sm" href="#dropboximageTab_IV" data-toggle="tab">
									{% trans %}mo.login.info_account.step_iv{% endtrans %}
								</button>
							</div>
						</div>     
						<div class="tab-content">
							<div class="tab-pane fade active in" id="dropboximageTab_I">
								<img src="{{ asset('images/'~app.request.locale~'/dropbox_step_01.png') }}" class="img-thumbnail">
							</div>
							<div class="tab-pane fade in" id="dropboximageTab_II">
								<img src="{{ asset('images/'~app.request.locale~'/dropbox_step_02.png') }}" class="img-thumbnail">
							</div>
							<div class="tab-pane fade in" id="dropboximageTab_III">
								<img src="{{ asset('images/'~app.request.locale~'/dropbox_step_03.png') }}" class="img-thumbnail">
							</div>
							<div class="tab-pane fade in" id="dropboximageTab_IV">
								<img src="{{ asset('images/'~app.request.locale~'/dropbox_step_04.png') }}" class="img-thumbnail">
							</div>
						</div>  
					</div>  
					<!-- -->             
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block closeButtonText %}
    {% trans %}Sluiten{% endtrans %}
{% endblock %}
{% set modalBaseType = 'close' %}