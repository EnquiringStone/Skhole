{% extends 'modal/modal.base.html.twig' %}
{% block modalBaseHeader %}
    <h4 class="modal-title centrum" id="{{ modalId }}">
        <b>
            <span class="glyphicon glyphicon-list-alt"></span>
            {% trans %}Mededeling Toevoegen{% endtrans %}
        </b>
    </h4>
{% endblock %}
{% block modalBaseContents %}
    <div class="modal-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">{% trans %}Titel{% endtrans %}</label>
                <div class="col-sm-10">
                    <input class="form-control data-value" data-value-name="title" placeholder="{% trans %}Titel van de mededeling{% endtrans %}">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{% trans %}Inhoud{% endtrans %}</label>
                <div class="col-sm-10">
                    <textarea class="form-control data-value" data-value-name="contents" placeholder="{% trans %}Type hier de mededeling{% endtrans %}"></textarea>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
{% block modalBaseFooter %}
    <div class="modal-footer">
        <button class="btn btn-default save-announcement" type="button">
            <span class="glyphicon glyphicon-floppy-disk text-primary" aria-hidden="true"></span>
            {% trans %}Bewaar & sluiten{% endtrans %}
        </button>
        <button class="btn btn-default" data-dismiss="modal" type="button">{% trans %}Annuleren{% endtrans %}</button>
    </div>
{% endblock %}