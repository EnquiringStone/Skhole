{% extends 'modal/modal.base.html.twig' %}
{% block modalBaseHeader %}
    <h4 class="modal-title centrum" id="{{ modalId }}">
        <b>
            <span class="glyphicon glyphicon-list-alt"></span>
            {% trans %}mo.add_announcement{% endtrans %}
        </b>
    </h4>
{% endblock %}
{% block modalBaseContents %}
    <div class="modal-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">{% trans %}mo.announcement_title{% endtrans %}</label>
                <div class="col-sm-10">
                    <input class="form-control data-value" data-value-name="title" placeholder="{% trans %}mo.f_placeholder.announcement_title{% endtrans %}">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{% trans %}mo.announcement.content{% endtrans %}</label>
                <div class="col-sm-10">
                    <textarea class="form-control data-value" data-value-name="contents" placeholder="{% trans %}mo.f_placeholder.announcement.content{% endtrans %}"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{% trans %}mo.announcement.instructor{% endtrans %}</label>
                <div class="col-sm-10">
                    <select class="form-control data-value" data-value-name="teacherId">
                        <option selected="selected" value="-1">{{ app.user.realName }}</option>
                        {% for teacher in teachers %}
                            <option value="{{ teacher.id }}">{{ teacher.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
{% block modalBaseFooter %}
    <div class="modal-footer">
        <button class="btn btn-default save-announcement" type="button">
            <span class="glyphicon glyphicon-floppy-disk text-primary" aria-hidden="true"></span>
             {% trans %}o.frequently_used.save_and_close{% endtrans %}
        </button>
        <button class="btn btn-default" data-dismiss="modal" type="button">{% trans %}o.frequently_used.cancel{% endtrans %}</button>
    </div>
{% endblock %}