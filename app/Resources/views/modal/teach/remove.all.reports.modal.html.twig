{% extends ':modal:modal.base.html.twig' %}
{% block modalBaseHeader %}
    <h4 class="modal-title centrum" id="{{ modalId }}">
        <b>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            {% trans %}Verwijder cursist{% endtrans %}
        </b>
    </h4>
{% endblock %}
{% block modalBaseContents %}
    <div class="modal-body">
        <hr />
        <p class="lead centrum">
            {% trans %}Verwijderen kan niet ongedaan worden. Weet je het zeker?{% endtrans %}
        </p>
        <br />
        <p class="centrum">
            {% trans %}Je staat op het punt om de cursist{% endtrans %} {{ user.firstName|capitalize }} {{ user.surname|capitalize }} {% trans %}te verwijderen. De gedeelde rapporten voor deze cursist zullen ook automatisch worden verwijdered{% endtrans %}
        </p>
    </div>
{% endblock %}
{% set modalBaseType = 'choice' %}
{% block modalBaseYesId %}{{ user.id }}{% endblock %}
{% block modalBaseYesAction %}RemoveAll{% endblock %}