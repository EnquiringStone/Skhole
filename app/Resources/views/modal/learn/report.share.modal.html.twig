{% extends 'modal/modal.base.html.twig' %}
{% block modalBaseHeader %}
    <h4 class="modal-title centrum" id="{{ modalId }}">
        <b>
            {% trans %}Deel rapport{% endtrans %}
        </b>
    </h4>
{% endblock %}
{% block modalBaseContents %}
    <div class="modal-body">
        <h4>{% trans %}Deel met begeleider{% endtrans %}</h4>
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">{% trans %}Begeleidercode{% endtrans %}:</label>
                <div class="col-sm-10">
                    <input class="form-control input-mentor-code" placeholder="{% trans %}De begeleidercode van jou begeleider{% endtrans %}">
                </div>
            </div>
            <br>
            <div class="centrum">
                <button class="btn btn-default btn-lg send-mentor-request" type="button" data-report-id="{{ report.id }}">
                    <b>{% trans %}Versturen{% endtrans %}</b>
                </button>
            </div>
        </form>
        <br>
        <div class="modal-info-background">
            <p>
                <b>
                    <span class="glyphicon glyphicon-info-sign text-info" aria-hidden="true"></span>
                    {% trans %}Ter informatie{% endtrans %}
                </b>
                <br>
                {% trans %}Als je de begeleidercode invult geef je jou voortgang, in de vorm van de antwoorden die je geeft, door aan de docent die aan de begeleiderscode is gekoppeld{% endtrans %}.
            </p>
        </div>
    </div>
{% endblock %}

{% block closeButtonText %}
    {% trans %}Sluiten{% endtrans %}
{% endblock %}
{% set modalBaseType = 'close' %}