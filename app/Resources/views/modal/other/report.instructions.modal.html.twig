{% extends 'modal/modal.base.html.twig' %}
{% set modalId = 'reportInstructionsModal' %}
{% block modalBaseHeader %}
    <h4 class="modal-title centrum" id="reportInstructionsModal">
        <b>
            <span class="glyphicon glyphicon-info-sign text-primary" aria-hidden="true"></span>
            {% trans %}imo.report_content.step_01.notify_content{% endtrans %}
        </b>
    </h4>
{% endblock %}
{% block modalBaseContents %}
    <div class="modal-body">
        <div class="thumbnail">
            <h4 class="text-primary">
                <samp>
                    <b>{% trans %}imo.frequently_used.step_01{% endtrans %}</b>:
                    {% trans %} imo.report_content.step_01.notify_content{% endtrans %}
                </samp>
            </h4>
            <p>
                {% trans %}imo.report_content.step_01.notify_content.t_long_01{% endtrans %}.
            </p>
            <ol type="I">
                <li>{% trans %}imo.report_content.step_01.notify_content.li_01{% endtrans %}.</li>
                <li>{% trans %}imo.report_content.step_01.notify_content.li_02{% endtrans %}.</li>
            </ol>
             <div class="thumbnail">     
                <div class="btn-pref" role="group">
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary btn-sm btn-default" href="#reportImageTab_I" data-toggle="tab">
                            {% trans %}mo.login.info_account.step_i{% endtrans %}
                        </button>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-sm" href="#reportImageTab_II" data-toggle="tab">
                            {% trans %}mo.login.info_account.step_ii{% endtrans %}
                        </button>
                    </div>
                </div>     
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="reportImageTab_I">
                        <img src="{{ asset('images/'~app.request.locale~'/report_step_01.png') }}">
                    </div>
                    <div class="tab-pane fade in" id="reportImageTab_II">
                        <img src="{{ asset('images/'~app.request.locale~'/report_step_02.png') }}"> 
                    </div>
                </div>  
            </div>       
        </div>
        <div class="thumbnail">
            <h4 class="text-primary">
                <samp>
                    <b>{% trans %}imo.frequently_used.step_02{% endtrans %}</b>:
                    {% trans %}imo.report_content.step_02.notify_investigation{% endtrans %}
                </samp>
            </h4>
            <p>{% trans %}imo.report_content.step_02.notify_investigation.t_long_01{% endtrans %}. </p>
        </div>
        <div class="thumbnail">
            <h4 class="text-primary"><samp><b>{% trans %}imo.frequently_used.step_03{% endtrans %}</b>:{% trans %}imo.report_content.step_03.feedback{% endtrans %}</samp></h4>
            <p>{% trans %}imo.report_content.step_03.feedback.result_positive{% endtrans %}.</p>
            <p>{% trans %}imo.report_content.step_03.feedback.result_negative{% endtrans %}.</p>
        </div>
    </div>
{% endblock %}

{% block closeButtonText %}
    {% trans %}o.frequently_used.close{% endtrans %}
{% endblock %}
{% set modalBaseType = 'close' %}